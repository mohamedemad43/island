<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:comment="http://schemas.android.com/tools">

    <data>

        <variable name="apps" type="com.oasisfeng.island.model.AppListViewModel" />
        <variable name="entry" type="com.oasisfeng.island.model.AppListViewModel.Filter.Entry" />

    </data>

    <RelativeLayout
        android:clickable="true"
        android:onClick="@{() -> apps.select(entry)}"
        android:background="?android:attr/selectableItemBackground"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio"
            android:checked="@{apps.filterEntryPrimaryChoice == entry}"
            tools:checked="true"
            android:clickable="false"
            android:background="@null"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/title"
            android:text="@{entry.getLabel()}"
            tools:text="@string/filter_mainland"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@{entry.getDescription()}"
            tools:text="@string/description_mainland"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/radio"
            android:layout_below="@id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
    </RelativeLayout>

</layout>
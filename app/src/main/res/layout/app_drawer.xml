<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".MainActivity">

    <data>
        <import type="com.oasisfeng.island.model.AppViewModel.State" />
        <variable name="apps" type="com.oasisfeng.island.model.AppListViewModel" />
        <variable name="status" type="com.oasisfeng.island.model.GlobalStatus" />
    </data>

    <com.oasisfeng.common.view.ScrimInsetsRelativeLayout
        android:fitsSystemWindows="true"
        android:background="@android:color/background_light"
        android:layout_gravity="start"
        android:layout_width="280dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/banner"
            android:importantForAccessibility="no"
            bind:animatedSrc="@{apps.filterEntryPrimaryChoice.banner}"
            android:scaleType="fitXY"
            android:background="@android:color/background_light"
            android:elevation="4dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="186dp"/>

        <TextView
            android:id="@+id/destroy"
            android:onClick="@{() -> apps.onDestroyClick()}"
            tools:text="@string/menu_deactivate_island"
            android:text="@{apps.deviceOwner ? @string/menu_deactivate_island : @string/menu_destroy_island}"
            android:drawableStart="@drawable/ic_exit_24dp"
            android:drawablePadding="8dp"
            android:clickable="true"
            android:elevation="4dp"
            android:background="@android:color/background_light"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            app:fitSystemMarginBottom="true"/>

        <ScrollView
            android:layout_below="@id/banner"
            android:layout_above="@id/destroy"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/drawer_filter"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </ScrollView>

    </com.oasisfeng.common.view.ScrimInsetsRelativeLayout>

</layout>
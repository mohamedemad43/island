<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".MainActivity">

    <data>
        <import type="com.oasisfeng.island.model.AppViewModel.State" />
        <variable name="apps" type="com.oasisfeng.island.model.AppListViewModel" />
        <variable name="status" type="com.oasisfeng.island.model.GlobalStatus" />
    </data>

    <com.oasisfeng.common.view.ScrimInsetsRelativeLayout
        android:fitsSystemWindows="true"
        android:background="@android:color/background_light"
        android:layout_gravity="start"
        android:layout_width="280dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/banner"
            android:importantForAccessibility="no"
            bind:animatedSrc="@{apps.filterEntryPrimaryChoice.getBanner()}"
            android:scaleType="fitXY"
            android:background="@android:color/background_light"
            android:elevation="4dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="186dp"/>

        <ImageButton
            android:id="@+id/settings"
            android:src="@drawable/ic_settings_24dp"
            android:elevation="6dp"
            android:alpha="0.8"
            android:background="@android:color/background_light"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            app:fitSystemMarginBottom="true"
            android:contentDescription="@string/drawer_button_settings"/>

        <ScrollView
            android:layout_below="@id/banner"
            android:layout_above="@id/settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/drawer_item_mainland"
                    layout="@layout/app_drawer_item"
                    bind:apps="@{apps}"
                    bind:entry="@{apps.getFilterPrimaryOptions().get(0)}" />

                <include
                    android:id="@+id/drawer_item_island"
                    layout="@layout/app_drawer_item"
                    bind:apps="@{apps}"
                    bind:entry="@{apps.getFilterPrimaryOptions().get(1)}" />

            </LinearLayout>

        </ScrollView>

    </com.oasisfeng.common.view.ScrimInsetsRelativeLayout>

</layout>
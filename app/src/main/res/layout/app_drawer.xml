<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".MainActivity">

    <data>
        <import type="com.oasisfeng.island.model.AppViewModel.State" />
        <variable name="apps" type="com.oasisfeng.island.model.AppListViewModel" />
        <variable name="status" type="com.oasisfeng.island.model.GlobalStatus" />
    </data>

    <com.oasisfeng.common.view.ScrimInsetsRelativeLayout
        android:fitsSystemWindows="true"
        android:background="@android:color/background_light"
        android:layout_gravity="start"
        android:layout_width="280dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/banner"
            android:importantForAccessibility="no"
            android:src="@{(apps.filterPrimaryChoice == 1) ? @drawable/drawer_mainland : @drawable/drawer_island}"
            android:scaleType="fitXY"
            android:background="@android:color/background_light"
            android:elevation="4dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="186dp"/>

        <ImageButton
            android:id="@+id/settings"
            android:src="@drawable/ic_settings_24dp"
            android:elevation="6dp"
            android:alpha="0.8"
            android:background="@android:color/background_light"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            app:fitSystemMarginBottom="true"
            android:contentDescription="@string/drawer_button_settings"/>

        <ScrollView
            android:layout_below="@id/banner"
            android:layout_above="@id/settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.oasisfeng.island.view.drawerItemView
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    bind:itemTitle="@{@string/filter_mainland}"
                    bind:itemDescription="@{@string/description_mainland}"
                    bind:itemSelected="@{apps.filterPrimaryChoice == 1}"
                    android:onClick="@{() -> apps.onFilterPrimaryChanged(1)}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.oasisfeng.island.view.drawerItemView
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    bind:itemTitle="@{@string/filter_island}"
                    bind:itemDescription="@{@string/description_island}"
                    bind:itemSelected="@{apps.filterPrimaryChoice == 0}"
                    android:onClick="@{() -> apps.onFilterPrimaryChanged(0)}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </ScrollView>

    </com.oasisfeng.common.view.ScrimInsetsRelativeLayout>

</layout>
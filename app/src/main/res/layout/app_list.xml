<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        tools:context=".MainActivity">

    <data>
        <import type="com.oasisfeng.island.model.AppViewModel.State" />
        <variable name="apps" type="com.oasisfeng.island.model.AppListViewModel" />
        <variable name="status" type="com.oasisfeng.island.model.GlobalStatus" />
    </data>

    <android.support.v4.widget.DrawerLayout
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <com.oasisfeng.common.view.FloatingElevationRelativeLayout
                android:background="?android:attr/colorPrimary"
                android:elevation="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Toolbar
                    android:id="@+id/appbar"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    android:background="?android:attr/colorPrimary"
                    android:title="@{(apps.filterPrimaryChoice == 1) ? @string/filter_mainland : @string/filter_island}"
                    android:theme="@android:style/ThemeOverlay.Material.Dark.ActionBar"
                    android:popupTheme="@style/AppThemeOverlay.Dark.Popup">

                    <!--
                    <Spinner
                        android:id="@+id/filters"
                        android:entries="@{apps.filterPrimaryOptions}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:popupTheme="@style/AppThemeOverlay.Dark.Popup"/>
                        -->

                </Toolbar>
            </com.oasisfeng.common.view.FloatingElevationRelativeLayout>

            <com.oasisfeng.common.view.FloatingElevationRecyclerView
                android:id="@+id/app_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="?android:attr/actionBarSize"
                android:paddingBottom="8dp"
                android:paddingStart="-16dp" tools:comment="To workaround the weired tilt side shadow on elevated item"
                android:paddingEnd="-16dp"
                android:clipToPadding="false"
                android:background="@color/background"
                bind:items="@{apps.items}"
                bind:item_binder="@{apps.item_binder}"
                tools:listitem="@layout/app_entry" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:visibility="gone"
                bind:visible="@{apps.items.isEmpty()}"
                android:textAppearance="?android:textAppearanceLarge"
                android:fontFamily="sans-serif-condensed"
                android:lineSpacingMultiplier="1.3"
                android:text="@string/tip_empty_app_list" />

            <include android:id="@+id/details" layout="@layout/app_detail" bind:apps="@{apps}" />

        </android.support.design.widget.CoordinatorLayout>

        <include android:id="@+id/drawer" layout="@layout/app_drawer" bind:apps="@{apps}" bind:status="@{status}" />

    </android.support.v4.widget.DrawerLayout>

</layout>
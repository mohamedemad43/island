<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        tools:context=".MainActivity">

    <data>
        <import type="com.oasisfeng.island.model.AppViewModel.State" />
        <variable name="apps" type="com.oasisfeng.island.model.AppListViewModel" />
        <variable name="status" type="com.oasisfeng.island.model.GlobalStatus" />
    </data>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer"
        android:fitsSystemWindows="true"
        bind:drawerListener="@{apps.drawer_listener}"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:background="?android:attr/colorPrimary"
                bind:elevationChangeOnScroll="@{true}"
                android:elevation="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Toolbar
                    android:id="@+id/appbar"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    android:background="?android:attr/colorPrimary"
                    android:title="@{apps.filterEntryPrimaryChoice.label}"
                    android:theme="@android:style/ThemeOverlay.Material.Dark.ActionBar"
                    android:popupTheme="@style/AppThemeOverlay.Dark.Popup"/>

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/app_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="?android:attr/actionBarSize"
                android:paddingBottom="88dp"
                android:clipToPadding="false"
                android:background="@color/background"
                bind:elevationChangeOnScroll="@{true}"
                bind:layoutManager="@{apps.layout_manager}"
                bind:items="@{apps.items}"
                bind:item_binder="@{apps.item_binder}"
                bind:item_layout="@{@layout/app_entry}"
                tools:listitem="@layout/app_entry" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                bind:shown="@{apps.items.isEmpty()}"
                android:textAppearance="?android:textAppearanceLarge"
                android:fontFamily="sans-serif-condensed"
                android:lineSpacingMultiplier="1.3"
                android:text="@string/tip_empty_app_list" />

            <include android:id="@+id/details" layout="@layout/app_detail" bind:apps="@{apps}" />

        </android.support.design.widget.CoordinatorLayout>

        <include android:id="@+id/drawer_content" layout="@layout/app_drawer" bind:apps="@{apps}" bind:status="@{status}" />

    </android.support.v4.widget.DrawerLayout>

</layout>